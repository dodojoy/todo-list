<%= form_with(model: task, class: "contents" ) do |form| %>     
    <div data-controller="task">
      <div class="flex">
        <%= form.text_field :created_at, value:"Created at: #{format_date(task.created_at)}", class: "text-end text-sm text-custom-black/50 w-full", disabled: true %>
      </div>
      <div class="flex items-center gap-2">
        <%= form.check_box :concluded,

              data: { task_target: "checkbox", action: "change->task#toggle" },
              class: ["block rounded-md border-custom-black order-first h-12 w-12",
                      {"border-gray-400 focus:outline-custom-black": task.errors[:concluded].none?,
                      "border-red-400 focus:outline-red-600": task.errors[:concluded].any?}] %>

        <%= form.text_area :title,
              class: ["block p-2 rounded-md rounded-md mt-2 w-full focus:outline-none text-2xl font-semibold resize-none",
                      {"focus:outline-custom-black": task.errors[:title].none?,
                      "border-red-400 focus:outline-red-600": task.errors[:title].any?}],
              placeholder: "Enter task title",
              maxlength: 50 %>
      </div>

      <div class="flex items-center gap-2 mt-2">
        <span class="text-sm text-custom-black">Status: </span>
        <span data-task-target="label" class="text-sm text-custom-black/50"></span>
      </div>
    </div>

    <div class="flex items-center gap-2 mt-2">
      <%= form.label :due_at, "Due on:", class: "text-sm text-custom-black" %>
      <%= form.datetime_field :due_at, value: task.due_at, class: ["text-sm focus:outline-none focus:text-custom-black text-custom-black/50", {"focus:outline-none": task.errors[:due_at].none?, "focus:outline-none": task.errors[:due_at].any?}] %>
    </div>

    <div class="flex h-30 mt-2 flex-col gap-2">
      <%= form.label :description, "Description:", class: "text-sm text-custom-black" %>
      <%= form.textarea :description, value: task.description, placeholder: "Write a description", class: ["p-2 border-gray-400 rounded-md border-1 h-full text-sm w-full focus:outline-none text-custom-black", {"focus:outline-none": task.errors[:description].none?, "focus:outline-none": task.errors[:description].any?}] %>
    </div> 

    <div class="flex inline justify-end w-full">
      <%= form.submit "Edit Task", class: "mt-2 w-full rounded-md px-3.5 py-2.5 bg-custom-black hover:bg-custom-black/80 text-custom-white inline-block font-medium cursor-pointer" %>
    </div>
<% end %>