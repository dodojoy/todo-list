<div id="<%= dom_id task %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= task.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= task.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Due at:</strong>
    <%= task.due_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Concluded:</strong>
    <%= task.concluded? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Concluded at:</strong>
    <%= task.concluded_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= task.user_id %>
  </div>
</div>
