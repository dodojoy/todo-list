<%= turbo_frame_tag dom_id(task), class: "w-full" do %>
  <div class="w-full flex items-center gap-2 border-[0.3px] border-gray-200 rounded-md p-3 shadow-sm cursor-pointer hover:bg-custom-white/5 hover:scale-101 transition-all duration-300">

    <%= form_with model: task, data: { turbo_frame: dom_id(task), controller: "task" }, class: "inline-block" do |form| %>
      <%= form.check_box :concluded,
            { checked: task.concluded,
              class: "w-6 h-6",
              data: { task_target: "checkbox", action: "change->task#submit" } } %>
    <% end %> 

    <span class="text-xl"><%= task.title %></span>
  </div>
<% end %>