<div data-controller="dialog">
  <dialog 
    data-dialog-target="dialog"
    data-task-target="dialog" 
    id="edit_task_dialog" 
    aria-labelledby="edit_task_dialog-title" 
    class="fixed inset-0 size-auto max-h-none max-w-none overflow-y-auto bg-transparent backdrop:bg-transparent">
    <div class="fixed inset-0 bg-black/50"></div>

    <div tabindex="0" class="flex min-h-full items-center justify-center p-4 text-center focus:outline-none sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-custom-white text-left shadow-xl outline -outline-offset-1 outline-white/10 transition-all sm:my-8 sm:w-full sm:max-w-lg">
        <div class="bg-custom-white flex flex-col px-4 pt-5 pb-4 sm:p-6 sm:pb-4 w-full gap-2">
            <div class="flex justify-end w-full">
                <button 
                  type="button" 
                  data-action="dialog#close"
                  class="cursor-pointer rounded-md px-3 py-2 text-sm font-semibold text-white sm:ml-3 sm:w-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" class="text-custom-black"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/></svg>
                </button>
            </div>
            <div id="edit-dialog-content">
              <%= render "tasks/edit_form", task: @task %>
            </div>
        </div>
      </div>
    </div>
  </dialog>
</div>