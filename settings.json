{
    "files.associations": {
        "*.erb": "html",
        "*.html.erb": "erb"
    },
    "[erb]": {
        "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
        "editor.formatOnSave": true
    },
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSaveOptions": {
        "tabSize": 2,
        "insertSpaces": true
    }
}